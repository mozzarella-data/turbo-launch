<script>
  // âœ… NEW: make the two sliders update their displayed values (no other behavior changed)
  (function () {
    const gainSlider = document.getElementById("capitalGainSlider");
    const gainValue  = document.getElementById("capitalGainValue");
    const irrSlider  = document.getElementById("targetIrrSlider");
    const irrValue   = document.getElementById("targetIrrValue");

    const fmtMoney = (n) => {
      const x = Math.round(Number(n) || 0);
      return "$" + x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    };

    function sync() {
      gainValue.textContent = fmtMoney(gainSlider.value);
      irrValue.textContent  = `${Number(irrSlider.value).toFixed(1)}%`;
    }

    gainSlider.addEventListener("input", sync);
    irrSlider.addEventListener("input", sync);

    // initial paint
    sync();
  })();
</script>

<script>
        // Chart.js Configuration
        const ctx = document.getElementById('growthChart').getContext('2d');
        // Gradient for Orange Line Area
        const gradientOrange = ctx.createLinearGradient(0, 0, 0, 400);
        gradientOrange.addColorStop(0, 'rgba(245, 158, 11, 0.15)'); // Primary color with opacity
        gradientOrange.addColorStop(1, 'rgba(245, 158, 11, 0.0)');
        // Gradient for Gray Line Area
        const gradientGray = ctx.createLinearGradient(0, 0, 0, 400);
        gradientGray.addColorStop(0, 'rgba(148, 163, 184, 0.1)'); // Slate color with opacity
        gradientGray.addColorStop(1, 'rgba(148, 163, 184, 0.0)');
        // Determine if dark mode is active to set grid colors
        const isDarkMode = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        const gridColor = isDarkMode ? 'rgba(255, 255, 255, 0.05)' : 'rgba(0, 0, 0, 0.03)';
        const tickColor = isDarkMode ? '#94A3B8' : '#64748B';
        const chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Initial', '2026', '2027*', '2028', '2029', '2030', '2031', '2032', '2033', '2035 (Exit)'],
                datasets: [
                    {
                        label: 'Tideline OZ Fund',
                        data: [3.0, 3.2, 2.35, 2.5, 2.7, 2.9, 3.1, 3.4, 3.7, 4.4],
                        borderColor: '#F59E0B',
                        backgroundColor: gradientOrange,
                        borderWidth: 3,
                        pointRadius: 0,
                        pointHoverRadius: 6,
                        pointBackgroundColor: '#F59E0B',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Standard Taxable',
                        data: [1.9, 2.05, 2.2, 2.35, 2.55, 2.8, 3.0, 3.25, 3.55, 3.2], // Drops at end due to tax
                        borderColor: '#94A3B8',
                        backgroundColor: gradientGray,
                        borderWidth: 2,
                        pointRadius: 0,
                        pointHoverRadius: 6,
                        pointBackgroundColor: '#94A3B8',
                        fill: true,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false // Using custom legend
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        backgroundColor: isDarkMode ? '#1E293B' : '#FFFFFF',
                        titleColor: isDarkMode ? '#F8FAFC' : '#0F172A',
                        bodyColor: isDarkMode ? '#CBD5E1' : '#334155',
                        borderColor: isDarkMode ? '#334155' : '#E2E8F0',
                        borderWidth: 1,
                        padding: 10,
                        displayColors: true,
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += '$' + context.parsed.y + 'M';
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false,
                        },
                        ticks: {
                            color: tickColor,
                            font: {
                                size: 10,
                                family: "'Inter', sans-serif"
                            }
                        }
                    },
                    y: {
                        grid: {
                            color: gridColor,
                            borderDash: [5, 5],
                            drawBorder: false,
                        },
                        ticks: {
                            color: tickColor,
                            callback: function(value) {
                                return '$' + value + '.0M';
                            },
                            font: {
                                size: 10,
                                family: "'Inter', sans-serif"
                            },
                            padding: 10
                        },
                        min: 0,
                        max: 6
                    }
                },
                interaction: {
                    mode: 'nearest',
                    axis: 'x',
                    intersect: false
                }
            }
        });
    </script>

